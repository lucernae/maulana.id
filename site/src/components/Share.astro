---
import { siteConfig } from '@/data/site.config'
import TwitterColorIcon from './icons/TwitterColorIcon.astro'
import LinkedinGlyphIcon from './icons/LinkedinGlyphIcon.astro'
const message = siteConfig.shareMessage

const URL = Astro.url.href
---

<div class='flex flex-col gap-2'>
	<span class='mb-1 font-bold text-2xl'>Share</span>
	<ul class='flex gap-3'>
		<li>
			<a
				href={`https://twitter.com/intent/tweet?text=${message + ' ' + URL}`}
				aria-label='Share on Twitter'
				class='inline-flex items-center justify-center h-10 w-10 rounded-full bg-[#1DA1F2] text-white hover:opacity-90 shadow'
			>
				<TwitterColorIcon />
			</a>
		</li>
		<li>
			<a
				href={`https://www.linkedin.com/shareArticle?mini=true&url=${URL}`}
				aria-label='Share on LinkedIn'
				class='inline-flex items-center justify-center h-10 w-10 rounded-full bg-[#0A66C2] text-white hover:opacity-90 shadow'
			>
				<LinkedinGlyphIcon />
			</a>
		</li>
	</ul>
</div>
